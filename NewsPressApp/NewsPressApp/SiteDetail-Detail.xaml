<Page x:Class="NewsPressApp.SiteDetail_Detail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewsPressApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="SiteDetail_Detail">

    <Grid>
        <StackPanel x:Name="stkPanelDetail" Margin="10,10,10,10">
            <StackPanel Orientation="Horizontal" Height="72" Width="520">
                <TextBox x:Name="txtboxSearch" Foreground="#0F4925" Margin="19"  Text=" Ara..." TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="31" Grid.Column="2">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <DatePicker Height="35" Width="155" FontSize="15"></DatePicker>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
