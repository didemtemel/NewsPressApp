<Window x:Class="NewsPressApp.SiteDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsPressApp"
        mc:Ignorable="d"
        Title="SiteDetailWindow" Height="800" Width="1200">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="txtsitename" HorizontalAlignment="Left" FontSize="20" Margin="193,10,0,0" Text="GazeteAdı" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="844"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="btnReport" Content="Rapor" Width="279" Height="45" Click="btnReport_Click" ></Button>
            <Button x:Name="btnDetail" Content="Detay" Width="277" Height="45" Click="btnDetail_Click" ></Button>
            <Button x:Name="btnSettings" Content="Ayarlar" Width="289" Height="45" Click="btnSettings_Click" />
        </StackPanel>
        <StackPanel Height="686" Width="846">
            <Frame x:Name="frmSiteDetails" Margin="193,165,55,41"/>
        </StackPanel>
    </StackPanel>
</Window>
